<%- include ('partials/header'); %>
<section style="text-align:center">
    <div class="cont">
        <div class="titulo">
          <h1>Agregar Tarea</h1>
        </div>
        <div class="cajabarr">
            <div class="barras">
                <form action="/nuevaTarea" method="post">
                    <div>
                      <label>Fecha</label>
                      <input class="barrr" type="date" name="fecha" required />
                    </div>
                  
                    <div>
                      <label>Cliente</label>
                      <select name="cliente" id="cliente">
                        <% for(var i=0; i < personas.length; i++){ %>
                           <option value="<%= personas[i].nombre %> <%= personas[i].apellido %>">
                              <%= personas[i].nombre %>
                              <%= personas[i].apellido %>
                           </option>
                           <% } %>
                     </select>
                    </div>
                  
                    <div>
                      <label>Observacion</label>
                      <textarea class="barrr" name="observacion" required cols="30" rows="2"></textarea>
                    </div>
                  
                    <div>
                      <select name="asesor" id="asesor">
                        <% for(var i=0; i < usuarios.length; i++){ %>
                           <option value="<%= usuarios[i].nombre %>">
                              <%= usuarios[i].nombre %>
                           </option>
                           <% } %>
                     </select>
                    </div>
                  
                    <br />
                    <div>
                      <button class="boton" type="submit">Guardar</button>
                      <form action="/tareas">
                        <input class="boton" type="submit" value="Volver a listado" />
                      </form>
                    </div>
                  </form>
            </div>           
        </div>
        
    </div>
</section>

<%- include ('partials/footer'); %>